{
  "manifest_version": 3,
  "name": "网页二维码",
  "version": "1.0",
  "description": "生成当前网页的二维码,支持下载",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "web_accessible_resources": [{
    "resources": ["*.png"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 